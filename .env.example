# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://<your-search>.search.windows.net
AZURE_SEARCH_KEY=<admin-key>

# Cosmos DB
COSMOS_ENDPOINT=https://<your-cosmos>.documents.azure.com:443/
COSMOS_KEY=<cosmos-key>
COSMOS_DB=blogs
COSMOS_ARTICLES=articles
COSMOS_USERS=users

# Embeddings backend selection: "openai" or "hf"
EMBEDDING_PROVIDER=openai
# For OpenAI
OPENAI_API_KEY=<openai-or-azure-openai-key>
OPENAI_BASE_URL=          # (optional, for Azure OpenAI)
OPENAI_API_VERSION=2024-06-01
EMBEDDING_MODEL=text-embedding-3-small
# For HF
HF_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Optional override. If unset, we resolve automatically from model.
EMBEDDING_DIM=

# Weights (articles)
WEIGHT_SEMANTIC=0.5
WEIGHT_BM25=0.3
WEIGHT_VECTOR=0.1
WEIGHT_BUSINESS=0.1

# Authors weights (if you want vector/business for authors later)
AUTHORS_WEIGHT_SEMANTIC=0.6
AUTHORS_WEIGHT_BM25=0.4
AUTHORS_WEIGHT_VECTOR=0.0
AUTHORS_WEIGHT_BUSINESS=0.0

# Freshness controls
FRESHNESS_HALFLIFE_DAYS=250
FRESHNESS_WINDOW_DAYS=365

# Toggle embeddings at ingestion time (true/false)
ENABLE_EMBEDDINGS=true
